apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: sample-app
  namespace: argocd
spec:
  project: default
  source:
    repoURL:  https://x-access-token:${github_token}@github.com/${github_user}/${github_repo}
    targetRevision: HEAD
    path: ${app_path}
    helm:
      valueFiles:
        - ./values.yaml      
  destination:
    server: https://kubernetes.default.svc
    namespace: ${app_namespace}
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
